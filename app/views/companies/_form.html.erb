<%= form_with(model: company, local: true) do |form| %>
  <% if company.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label "Nombre *" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label "CUIT *" %>
        <%= form.text_field :cuit, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label "Provincia *" %>
        <%= form.select :province, Company::Provinces.map{|p| [ p[1], p[0] ]}, {}, {class: 'form-control'}%>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label "Ciudad *" %>
        <%= form.select :city, Company::Cities.map{|c| [ c[1], c[0] ]}, {}, {class: 'form-control'}%>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label "Dirección *" %>
        <%= form.text_field :address, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label "Teléfono *" %>
        <%= form.text_field :phone, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label "Email *" %>
        <%= form.text_field :email, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="actions">
        <%= form.submit "Guardar", class: "btn btn-default" %>
      </div>
    </div>
  </div>

  <br><br><br>

  <% end %>
