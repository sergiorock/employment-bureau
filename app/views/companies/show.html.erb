<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-3">
    <p>
      <strong>Name:</strong>
      <%= @company.name %>
    </p>

    <p>
      <strong>Cuit:</strong>
      <%= @company.cuit %>
    </p>

    <p>
      <strong>Province:</strong>
      <%= @company.province %>
    </p>

    <p>
      <strong>City:</strong>
      <%= @company.city %>
    </p>

    <p>
      <strong>Address:</strong>
      <%= @company.address %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= @company.phone %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @company.email %>
    </p>

    <%= link_to new_company_job_offer_path(@company) do %>
    <button class="btn btn-warning btn-sm">Crear Oferta de Empleo</button>
    <% end %>
  </div>
  <div class="col-9">
    <% if @job_offers.count > 0%>
    <% @job_offers.each do |job_offer| %>
    <%= link_to company_job_offer_path(@company, job_offer) do%>
    <div class="card" style="width: 100%;">
      <div class="card-body">
        <h5 class="card-title"><%= job_offer.description.truncate(45, separator: ' ') %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= job_offer.company.name %></h6>
        <small class="card-text"><%= job_offer.company.province %>, <%= job_offer.company.city %></small>
        <br>
        <small><%= job_offer.start_date.strftime("Publicada: %d/%m/%Y") %></small> -
        <small><%= job_offer.start_date.strftime("Expira: %d/%m/%Y") %></small>
        <% if current_admin %>
        <td class="text-center" style="cursor: pointer">
          <% if job_offer.is_active %>
          <p class="text-success">
            Oferta Activa
          </p>
          <div class="row">
            <div class="col-11">
            </div>
            <div class="col-1">
              <p class="text-danger">
                <i class="fa fa-times text-danger" data-toggle="tooltip" data-placement="top" title="Deshabilitar Oferta" data-container="body" data-animation="true"></i>
              </p>
            </div>
          </div>
          <% else %>
          <p class="text-danger">
            Oferta Pendiente de aprobación
          </p>
          <div class="row">
            <div class="col-11">
            </div>
            <div class="col-1">
              <p class="text-success">
                <i class="fa fa-check text-success" data-toggle="tooltip" data-placement="top" title="Aprobar Oferta" data-container="body" data-animation="true"></i>
              </p>
            </div>
          </div>
          <% end %>
        </td>
        <% end %>
      </div>
    </div>
    <br>
    <% end %>
    <br>
    <% end %>
    <div class="digg_pagination float-right">
      <%= will_paginate @job_offers, :container => false %>
    </div>
    <% else %>
    <div class="alert alert-info" role="alert">
      No hay Ofertas laborales cargadas todavía.
    </div>
    <% end %>
  </div>
</div>