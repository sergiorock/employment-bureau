<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12">
    <div class="card card-user">
      <div class="card-header">
        <h3 class="text-warning py-1">Detalle de la oferta</h3>
      </div>
      <div class="card-body">
        <p class="show-info-text">
          <strong class="text-primary">Descripción: </strong>
          <%= @job_offer.description %>
        </p>

        <p class="show-info-text">
          <strong class="text-primary">Fecha de publicación: </strong>
          <%= @job_offer.start_date %>
        </p>

        <p class="show-info-text">
          <strong class="text-primary">Fecha de expiración: </strong>
          <%= @job_offer.end_date %>
        </p>

        <p class="show-info-text">
          <strong class="text-primary">Empresa: </strong>
          <%= link_to company_path(@job_offer.company.id) do %>
            <%= @job_offer.company.name %>
          <% end %>
        </p>

        <p class="show-info-text">
          <strong class="text-primary">Activa: </strong>
            <%= @job_offer.is_active %>
        </p>

      </div>
    </div>
    <br>
    <%
=begin%>
 <%= link_to 'Edit', edit_student_path(@job_offer) %> |
    <%= link_to 'Back', job_offer_path %>
<%
=end%>
  </div>
</div>
